<?xml version="1.0" encoding="utf-8"?>
<layout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="loginViewModel"
            type="com.example.form.LoginViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:onClick="onLogin"
            android:text="Login"
            app:layout_constraintBottom_toTopOf="@+id/bottomguideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rightguideline"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordedit"
            app:layout_constraintVertical_bias="0.214" />

        <EditText
            android:id="@+id/usernameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={loginViewModel.username}"
            app:layout_constraintEnd_toStartOf="@+id/rightguideline"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toEndOf="@+id/usernamelabel"
            app:layout_constraintTop_toBottomOf="@+id/loginPage" />

        <EditText
            android:id="@+id/passwordedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={loginViewModel.password}"

            app:layout_constraintBottom_toTopOf="@+id/bottomguideline"
            app:layout_constraintEnd_toStartOf="@+id/rightguideline"
            app:layout_constraintTop_toTopOf="@+id/passwordlabel"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/usernamelabel"
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="8dp"

            android:text="Username"
            app:layout_constraintStart_toStartOf="@+id/leftguideline"
            app:layout_constraintTop_toTopOf="@+id/usernameedit" />


        <TextView
            android:id="@+id/passwordlabel"
            android:layout_width="72dp"
            android:layout_height="41dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="40dp"
            android:text="Password"

            app:layout_constraintStart_toStartOf="@+id/leftguideline"
            app:layout_constraintTop_toBottomOf="@+id/usernamelabel" />

        <TextView
            android:id="@+id/loginPage"
            android:layout_width="251dp"
            android:layout_height="35dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="48dp"
            android:text="Movie Booking Login"
            android:textSize="30sp"
            android:textAppearance="@color/colorPrimaryDark"
            android:fontFamily="cursive"
            android:textAlignment="center"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rightguideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topguideline"
            app:layout_constraintVertical_bias="0.527" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>