<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="dashBoardViewModel"
            type="com.example.form.DashBoardViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/dashboard_button"
            android:layout_width="160dp"
            android:layout_height="37dp"

            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:onClick="addNewMovie"
            android:text="Add"
            app:layout_constraintBottom_toTopOf="@+id/navigateLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/verGuideline"
            app:layout_constraintTop_toBottomOf="@id/dashboard_moviename_label" />

        <Button
            android:id="@+id/navigateLink"
            android:layout_width="230dp"
            android:layout_height="44dp"

            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="260dp"
            android:autoLink="web"
            android:onClick="navigateRecyclerViewPage"
            android:text="Navigate to Recycler Page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/verGuideline" />

        <EditText
            android:id="@+id/dashboard_moviename"
            android:layout_width="193dp"
            android:layout_height="40dp"


            android:text="@={dashBoardViewModel.newMovie}"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_moviename_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dashboard_moviename_label"
            android:layout_width="125dp"
            android:layout_height="37dp"

            android:layout_marginTop="132dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Movie Name"
            app:layout_constraintEnd_toStartOf="@+id/dashboard_moviename"
            app:layout_constraintHorizontal_bias="0.622"
            app:layout_constraintStart_toStartOf="@+id/verGuideline"
            app:layout_constraintTop_toTopOf="@+id/horGuideline" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginTop="44dp"
            android:fontFamily="cursive"
            android:text="Dashboard"
            android:textAlignment="center"
            android:textAppearance="@color/colorPrimaryDark"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/horGuideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>