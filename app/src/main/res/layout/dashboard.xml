<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="dashBoardViewModel"
            type="com.example.form.DashBoardViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/dashboard_button"
            android:layout_width="147dp"
            android:layout_height="49dp"
            android:layout_marginBottom="404dp"
            android:onClick="addNewMovie"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recycler_navigation"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/recycler_navigation"
            android:layout_width="147dp"
            android:layout_height="49dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="352dp"
            android:onClick="navigateRecyclerViewPage"
            android:text="Navigate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_moviename"
            app:layout_constraintVertical_bias="0.763" />

        <EditText
            android:id="@+id/dashboard_moviename"
            android:layout_width="193dp"
            android:layout_height="40dp"
            android:layout_marginTop="64dp"
            android:text="@={dashBoardViewModel.newMovie}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="146dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintBottom_toTopOf="@+id/dashboard_button"
            app:layout_constraintEnd_toStartOf="@+id/dashboard_moviename"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>